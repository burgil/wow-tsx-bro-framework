{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "typeRoots": ["./types", "../node_modules/@types"],
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "./**/*",
    "../**/*"
  ],
  "exclude": ["node_modules", "dist"]
}