{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": ["dom", "es2018"],
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "typeRoots": ["./types", "../node_modules/@types"],
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["webpack-env"]
  },
  "include": [
    "./**/*",
    "../**/*"
  ],
  "exclude": ["node_modules", "dist"]
}